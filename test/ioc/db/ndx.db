# NDX detector PVs

# E.g., D1 = INX1L04, D2 = INX1L05
record(ao, "adamc:$(D1)_nCur") {
}
record(ao, "adamc:$(D1)_gCur") {
}
record(ao, "adamc:$(D2)_nCur") {
}
record(ao, "adamc:$(D2)_gCur") {
}

# E.g., E = NDX1L05
record(ao, "adamc:$(E)_RESET") {
}
#record(ao, "adamc:$(E)_CAPACITOR_SW") {
#}
record(bo, "adamc:$(E)_CAPACITOR_SW") {
  field(ZNAM, "10pF")
  field(ONAM, "1000pF")
}
record(ao, "adamc:$(E)_PERIOD") {
}
record(ao, "adamc:$(E)_HV_BIAS") {
    field(VAL, 1000)
    field(PINI, "YES")
}
record(ao, "adamc:$(E)_HV_RBCK") {
    field(VAL, 1000)
    field(PINI, "YES")
}

# Newer, digiport-based NDX electrometers have different PVs
record(ao, "adamc:$(E)_r_i400_0_HV") {
    field(VAL, 1000)
    field(PINI, "YES")
}
record(ao, "adamc:$(E)_c_i400_0_HV") {
    field(VAL, 1000)
    field(PINI, "YES")
}
